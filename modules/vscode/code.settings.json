// Place your settings in this file to overwrite the default settings
{
  // Font
  // "editor.fontFamily": "'SauceCodePro Nerd Font'",
  "editor.fontFamily": "'Berkeley Mono', 'BerkeleyMono Nerd Font'",
  "terminal.integrated.fontFamily": "'Berkeley Mono', 'BerkeleyMono Nerd Font'",
  "terminal.integrated.customGlyphs": true,
  "editor.fontSize": 15,
  "editor.fontWeight": "400",
  "editor.lineHeight": 20,
  // Other
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.trimTrailingWhitespace": true,

  // disable this when tsc and flow dont play nice
  "javascript.validate.enable": false,

  "editor.snippetSuggestions": "bottom",
  "editor.formatOnSave": true,
  "editor.trimAutoWhitespace": true,
  "files.exclude": {
    "*.bundle.js": true,
    "*.js.map": true,
    "**/.classpath": true,
    "**/.DS_Store": true,
    "**/.eslintcache": true,
    "**/.factorypath": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.svn": true,
    "**/distx/*": true,
    "node_modules/*": true,
    "obj/*": true,
    "tmp/cache/*": true
  },
  "search.exclude": {
    "**/*.bundle.js": true,
    "**/*.js.map": true,
    "**/bower_components": true,
    "tmp/*": true,
    "tsconfig.tsbuildinfo": true,
    "vendor/*": true
  },
  "window.title": "${activeEditorMedium}",
  "java.autobuild.enabled": false,
  "java.errors.incompleteClasspath.severity": "ignore",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "gitblame.statusBarMessageFormat": "By ${author.name} ( ${time.ago} )",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.alwaysShowStatus": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.activityBar.visible": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "eslint.lintTask.enable": true,
  "git.ignoreLegacyWarning": true,
  "editor.maxTokenizationLineLength": 512,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [".terraform/**/*", "**/.terraform/**/*"]
  },
  "terraform.languageServer": {
    "external": true,
    "args": ["serve"]
  },
  "eslint.packageManager": "yarn",
  "editor.renderControlCharacters": true,
  "gitlens.advanced.telemetry.enabled": false,
  "editor.accessibilitySupport": "off",
  "fileTemplates.templates_dir": "/Users/juno/Templates/Code",
  "java.semanticHighlighting.enabled": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.autofetch": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "importCost.showCalculatingDecoration": false,
  "typescript.tsdk": "../node_modules/typescript/lib",
  "[mjml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb",
    "*.xml": "default"
  },
  "java.project.importHint": false,
  "flow.pathToFlow": "/Users/jsuarez/workspace/web/node_modules/.bin/flow",
  "flow.logLevel": "trace",
  "diffEditor.ignoreTrimWhitespace": false,
  "redhat.telemetry.enabled": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "atlascode.jira.enabled": false,
  "atlascode.bitbucket.enabled": false,
  "cSpell.userWords": [
    "Downvote",
    "flowtypes",
    "ondemand",
    "serverside",
    "Typeahead"
  ],
  "cSpell.enabled": false,
  "editor.wordWrap": "wordWrapColumn",
  "workbench.experimental.layoutControl.enabled": true,
  "telemetry.telemetryLevel": "off",
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "html.autoClosingTags": false,
  "workbench.startupEditor": "none",
  "search.useParentIgnoreFiles": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "polacode.transparentBackground": true,
  "codesnap.backgroundColor": "transparent",
  "window.commandCenter": true,
  "editor.fontLigatures": false,
  "workbench.colorTheme": "One Dark Pro Darker",
  "editor.stickyScroll.enabled": true,
  "nrf-connect.welcome.showOnStartup": false,
  "nrf-connect.toolchain.path": "${nrf-connect.toolchain:2.3.0}",
  "nrf-connect.topdir": "${nrf-connect.sdk:2.3.0}"
}
